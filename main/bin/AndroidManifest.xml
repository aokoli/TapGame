<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okolialex.tapgame.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/meta"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.okolialex.tapgame.main.TapGameMain"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.okolialex.tapgame.controller.ModifiedTapGameController"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.okolialex.tapgame.controller.TapGameController"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
